<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.frenchwordapp.frenchworddictionary.MainActivity">

    <Button
        android:id="@+id/wordCardButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="wordcard"
        android:layout_marginTop="10dp"
        android:background="@drawable/button1"
        />

    <TextView
        android:id="@+id/categoryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="カテゴリーで覚える" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_below="@+id/categoryText">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/lifeCategory"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:text="生活"
                android:background="@drawable/button1" />

            <Button
                android:id="@+id/greetingCategory"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:text="あいさつ"
                android:background="@drawable/button1" />

            <Button
                android:id="@+id/category3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button1" />

            <Button
                android:id="@+id/category4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button1" />

            <Button
                android:id="@+id/category5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button1" />


            <Button
                android:id="@+id/button"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button1" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/partOfSpeechText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"

        android:text="品詞で覚える" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="220dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <Button
                android:id="@+id/nounButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button1"
                android:text="名詞" />

            <Button
                android:id="@+id/verbButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_red"
                android:text="動詞" />

            <Button
                android:id="@+id/adjectiveButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button1"
                android:text="形容詞" />

            <Button
                android:id="@+id/adverbButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"

                android:background="@drawable/button_blue"
                android:text="副詞" />

            <Button
                android:id="@+id/otherButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button1"
                android:text="その他" />


        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/searchListButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="340dp"
        android:background="@drawable/button1"
        android:text="一覧・検索" />

    <Button
        android:id="@+id/settingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchListButton"
        android:background="@drawable/button1"
        android:layout_marginTop="10dp"
        android:text="設定" />




</RelativeLayout>
