<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="jp.frenchwordapp.frenchworddictionary.SettingActivity">


    <Switch
        android:id="@+id/randomSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:switchPadding="130dp"
        android:text="テストをランダム形式にする"/>

    <Switch
        android:id="@+id/sortWrongSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:switchPadding="130dp"
        android:text="不正解と未回答の単語のみをテストする"/>

    <Switch
        android:id="@+id/reverseSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:switchPadding="130dp"
        android:text="テスト単語と単語カードの単語名と意味の表示を交換"/>

    <Switch
        android:id="@+id/autoPlaySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:switchPadding="130dp"
        android:text="テスト単語と単語カードの発音を自動的に再生"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resetButton"
        android:layout_marginTop="50dp"
        android:background="@drawable/button1"
        android:text="正解・不正解をリセット"
        />

</LinearLayout>
