<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialogCustom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="単語登録"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/titleText"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleText"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:text="単語名"
        android:id="@+id/wordText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/wordText"
        android:id="@+id/wordEdit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="意味"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/wordEdit"
        android:id="@+id/meaningText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/meaningText"
        android:id="@+id/meaningEdit"/>

    <Spinner
        android:id="@+id/categorySpinner"
        android:layout_width="wrap_content"
        android:layout_below="@+id/meaningEdit"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/wordEdit"
        android:entries="@array/categoryItem"/>

    <Spinner
        android:id="@+id/hinshiSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/categorySpinner"
        android:layout_marginStart="49dp"
        android:entries="@array/partOfSpeechItem"/>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/categorySpinner"
        android:layout_marginTop="15dp"
        android:background="#ffffffff"
        android:text="登録"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/registerButton"
        android:layout_toStartOf="@+id/registerButton"
        android:background="#ffffffff"
        android:text="キャンセル"
        style="?android:attr/borderlessButtonStyle"/>
    />

</RelativeLayout>